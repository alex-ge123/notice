#macro( message $key )$TemVal.resource.getMessage($key, null, $TemVal.locale)#end
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        img {
            border: 0;
        }

        .main {
            width: 600px;
            margin: 0 auto;
            background-color: #fff;
            border: 1px solid #dedede;
            font-family: 微软雅黑;
        }

        .container {
            margin: 20px;
        }

        .page-title {
            border-bottom: #d4d6d5 solid 2px;
            font-size: 20px;
            line-height: 3;
            font-weight: bold
        }

        .mail-wrap {
        	font-size: 16px;
            margin: 25px 0;
        }

        .mail-container {
            line-height: 2.5;
            width: 100%;
        }

        .mail-container td {
            padding: 5px 10px;
            color: #57585a;
        }

        .mail-container td.left {
            width: 120px;
            text-align: right;
            color: #888888;
        }

        .code {
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            line-height: 1.5;
            color: #55595a;
        }

        .footer {
            background: #d8d8d8;
            padding: 10px 20px;
        }

        .link {
            text-decoration: none;
            color: #1212ee;
        }

        .lh150 {
            line-height: 1.5;
        }

        .w100 {
            width: 100%;
        }

        .fb{
            font-weight: bold;
        }
    </style>
</head>
<body>
<div class="main">
    <div class="header"><img src="$!{TemVal.imgPathBanner}" alt=""></div>
    <div class="container">
        <div class="page-title">$!{TemVal.value1}</div>
        <div class="mail-wrap">$!{TemVal.value2}</div>
        <table class="mail-container">
            <tr>
                <td class="left">#message(
                        'msg.email.content.visitorManagement.inviter')</td>
                <td colspan="2">$!{TemVal.value3}</td>
            </tr>
            <tr>
                <td class="left">#message(
                        'msg.email.content.visitorManagement.appointmentTime')</td>
                <td colspan="2">$!{TemVal.value4}</td>
            </tr>
            <tr>
                <td class="left">#message(
                        'msg.email.content.visitorManagement.phone')</td>
                <td colspan="2">$!{TemVal.value5}</td>
            </tr>
            <tr>
                <td class="left">#message(
                        'msg.email.content.visitorManagement.enterpriseLocation')</td>
                <td colspan="2">$!{TemVal.value6}</td>
            </tr>
            <tr>
                <td class="left" valign="top">#message(
                        'msg.email.content.visitorManagement.inviteCode')</td>
                <td>
                    <div class="code"><img src="$!{TemVal.value7}" alt=""><br/>$!{TemVal.value8}</div>
                </td>
                <td class="lh150">
                    $!{TemVal.value9}
                </td>
            </tr>
        </table>
        <div class="mail-wrap">$!{TemVal.value10}</div>
    </div>
    <div class="footer">
        <table class="w100">
            <tr>
                <td class="lh150">#message('msg.email.content.common.companyName')<br/>#message('msg.email.content.common.askBeforeSale')400-685-3160<br/>#message('msg.email.content.common.webSite')<a href="http://www.virsical.com" class="link"
                                                                           target="_blank">www.virsical.com</a>
                </td>
                <td align="right"><img src="$!{TemVal.imgPathDimcode}" alt=""></td>
            </tr>
        </table>
    </div>
</div>
</body>
</html>
